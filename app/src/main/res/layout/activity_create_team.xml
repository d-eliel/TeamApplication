<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="el.team_application.ActivityViews.Activities.CreateTeamActivity"
    android:orientation="vertical"
    android:background="@mipmap/android2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Team"
        android:id="@+id/createteam_title_tv"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30dp"
        android:textColor="#ffff0041" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manager:"
        android:id="@+id/createteam_managertitel_tv"
        android:textColor="#ffff0041" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/createteam_manager_tv"
        android:layout_gravity="right"
        android:textColor="#ffff0041" />

    <EditText
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/createteam_name_et"
        android:hint="Team Name"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:enabled="true"
        android:editable="true"
        android:textColor="#ffff0041" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/createteam_create_btn"
        android:textSize="20dp"
        android:layout_gravity="bottom|right"
        android:textColor="#ffff0041"
        android:background="#f3362f2d"
        android:layout_margin="5dp"
        android:padding="5dp" />
</LinearLayout>
