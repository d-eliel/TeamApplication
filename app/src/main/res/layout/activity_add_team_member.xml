<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
   tools:context="el.team_application.ActivityViews.Activities.AddTeamMemberActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:id="@+id/linearLayout"
    android:weightSum="1"
    android:background="@mipmap/android2">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="New Team Member"
    android:id="@+id/add_team_member_header"
    android:layout_gravity="center|top"
    android:textSize="32dp"
    android:textColor="#ffff0041"
    android:layout_margin="5dp"
    android:padding="5dp" />

    <EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/add_team_member_title"
    android:hint="Member Title"
        android:layout_marginTop="20dp"
        android:textColor="#ffff0041"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:id="@+id/add_team_member_email"
    android:hint="memberEmail@gmail.com"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:enabled="true"
    android:editable="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffff0041"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Join"
    android:id="@+id/add_team_member_join_btn"
    android:layout_gravity="center_horizontal"
    android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff0041"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="#f3362f2d" />

</LinearLayout>


