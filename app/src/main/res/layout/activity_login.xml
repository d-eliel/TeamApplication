<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="el.team_application.ActivityViews.Activities.LoginActivity"
    android:background="@mipmap/android2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login"
            android:id="@+id/login_title_tv"
            android:layout_gravity="center|top"
            android:textSize="70dp"
            android:textColor="#ffff0041" />

        <EditText
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email_et"
            android:autoText="false"
            android:hint="youremail@gmail.com"
            android:textColor="#ffff0041" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password_et"
            android:hint="******"
            android:textColor="#ffff0041" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_login_btn"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffff0041"
            android:background="#f3362f2d"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Don&apos;t have an account yet?"
            android:id="@+id/login_register_tv"
            android:textColor="#ffff0041" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/login_register_btn"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:textColor="#ffff0041"
            android:background="#f3362f2d"
            android:layout_margin="5dp"
            android:padding="5dp" />
    </LinearLayout>

</RelativeLayout>
